pipeline {
    agent any

    environment {
        // APNA DOCKER HUB USERNAME YAHA LIKHEIN
        DOCKER_USER = "aapka_username" 
        IMAGE_NAME = "static-website"
        // Credentials ID jo Jenkins mein banayi hai
        DOCKER_HUB_CREDS = 'docker-hub-creds'
    }

    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/rakeshramch85-eng/static-wabsite.git'
            }
        }

        stage('Build Image') {
            steps {
                // Windows ke liye bat command
                bat "docker build -t ${DOCKER_USER}/${IMAGE_NAME}:latest ."
            }
        }

        stage('Login & Push to Docker Hub') {
            steps {
                // withCredentials se password secure rehta hai
                withCredentials([usernamePassword(credentialsId: "${DOCKER_HUB_CREDS}", passwordVariable: 'DOCKER_PASS', usernameVariable: 'DOCKER_USER_ID')]) {
                    bat "docker login -u %DOCKER_USER_ID% -p %DOCKER_PASS%"
                    bat "docker push ${DOCKER_USER}/${IMAGE_NAME}:latest"
                }
            }
        }
    }

    post {
        always {
            // Cleanup: Local se image remove karna taaki space bache
            bat "docker logout"
        }
    }
}
